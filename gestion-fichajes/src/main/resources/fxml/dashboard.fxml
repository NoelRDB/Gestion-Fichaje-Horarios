<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.noelrdb.gestion_fichajes.javafx.controller.DashboardController"
            style="-fx-background-color: #ecf0f1;">

    <top>
        <VBox style="-fx-background-color: #3498db; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label fx:id="welcomeLabel" text="Bienvenido/a" style="-fx-text-fill: white;">
                    <font><Font name="System Bold" size="20.0"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" text="Estado: INACTIVO" style="-fx-text-fill: white;">
                    <font><Font size="14.0"/></font>
                </Label>
                <Button text="Cerrar Sesión" onAction="#handleLogout"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;">
                    <font><Font size="12.0"/></font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 20;">

            <!-- Indicadores de tiempo -->
            <GridPane hgap="20.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                </columnConstraints>

                <!-- Tiempo Trabajado -->
                <VBox spacing="5.0" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Label text="Tiempo Trabajado" style="-fx-text-fill: white;">
                        <font><Font size="14.0"/></font>
                    </Label>
                    <Label fx:id="workTimeLabel" text="00:00:00" style="-fx-text-fill: white;">
                        <font><Font name="System Bold" size="28.0"/></font>
                    </Label>
                </VBox>

                <!-- Tiempo de Descanso -->
                <VBox spacing="5.0" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      style="-fx-background-color: #e67e22; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Label text="Tiempo de Descanso" style="-fx-text-fill: white;">
                        <font><Font size="14.0"/></font>
                    </Label>
                    <Label fx:id="breakTimeLabel" text="00:00:00" style="-fx-text-fill: white;">
                        <font><Font name="System Bold" size="28.0"/></font>
                    </Label>
                </VBox>

                <!-- Jornada Restante -->
                <VBox spacing="5.0" alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0"
                      style="-fx-background-color: #27ae60; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Label text="Jornada Restante" style="-fx-text-fill: white;">
                        <font><Font size="14.0"/></font>
                    </Label>
                    <Label fx:id="remainingWorkTimeLabel" text="08:00:00" style="-fx-text-fill: white;">
                        <font><Font name="System Bold" size="28.0"/></font>
                    </Label>
                </VBox>

                <!-- Descanso Disponible -->
                <VBox spacing="5.0" alignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="0"
                      style="-fx-background-color: #9b59b6; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Label text="Descanso Disponible" style="-fx-text-fill: white;" wrapText="true" alignment="CENTER">
                        <font><Font size="14.0"/></font>
                    </Label>
                    <Label fx:id="availableBreakTimeLabel" text="00:30:00" style="-fx-text-fill: white;">
                        <font><Font name="System Bold" size="28.0"/></font>
                    </Label>
                </VBox>
            </GridPane>

            <!-- Tablas -->
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                <!-- Trabajadores Activos -->
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                    <Label text="Trabajadores Activos" style="-fx-text-fill: #2c3e50;">
                        <font><Font name="System Bold" size="16.0"/></font>
                    </Label>
                    <TableView fx:id="activeWorkersTable" prefHeight="250.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="workerIdColumn" text="ID" prefWidth="60.0"/>
                            <TableColumn fx:id="workerNameColumn" text="Nombre Completo" prefWidth="240.0"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Registro de Fichajes -->
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                    <Label text="Registro de Fichajes" style="-fx-text-fill: #2c3e50;">
                        <font><Font name="System Bold" size="16.0"/></font>
                    </Label>
                    <TableView fx:id="signingsTable" prefHeight="250.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="signingIdColumn" text="ID" prefWidth="40.0"/>
                            <TableColumn fx:id="signingWorkerColumn" text="Trabajador" prefWidth="150.0"/>
                            <TableColumn fx:id="signInColumn" text="Entrada" prefWidth="130.0"/>
                            <TableColumn fx:id="signOutColumn" text="Salida" prefWidth="130.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </HBox>

            <!-- Botones de Acción -->
            <HBox spacing="15.0" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <Button text="Fichaje Entrada" onAction="#handleSignIn" prefWidth="180.0" prefHeight="50.0"
                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14;">
                    <font><Font name="System Bold" size="14.0"/></font>
                </Button>

                <Button text="Fichaje Salida" onAction="#handleSignOut" prefWidth="180.0" prefHeight="50.0"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14;">
                    <font><Font name="System Bold" size="14.0"/></font>
                </Button>

                <Button text="Tomar Descanso" onAction="#handleBreak" prefWidth="180.0" prefHeight="50.0"
                       style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14;">
                    <font><Font name="System Bold" size="14.0"/></font>
                </Button>

                <Button text="Reanudar Jornada" onAction="#handleResumeWork" prefWidth="180.0" prefHeight="50.0"
                       style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14;">
                    <font><Font name="System Bold" size="14.0"/></font>
                </Button>
            </HBox>

        </VBox>
    </center>

</BorderPane>
