<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.noelrdb.gestion_fichajes.javafx.controller.AdminDashboardController"
           style="-fx-background-color: #ecf0f1;">

    <top>
        <VBox style="-fx-background-color: #8e44ad; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="Panel de Administrador" style="-fx-text-fill: white;">
                    <font><Font name="System Bold" size="20.0"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="adminNameLabel" text="Admin" style="-fx-text-fill: white;">
                    <font><Font size="14.0"/></font>
                </Label>
                <Button text="Cerrar Sesión" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;">
                    <font><Font size="12.0"/></font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 20;">
            
            <!-- Formulario de gestión -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <Label text="Gestión de Trabajadores" style="-fx-text-fill: #2c3e50;">
                    <font><Font name="System Bold" size="18.0"/></font>
                </Label>
                
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0"/>
                    </columnConstraints>
                    
                    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font><Font size="12.0"/></font>
                    </Label>
                    <TextField fx:id="nameField" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Apellido:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <font><Font size="12.0"/></font>
                    </Label>
                    <TextField fx:id="surnameField" promptText="Apellido" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                    
                    <Label text="DNI:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font><Font size="12.0"/></font>
                    </Label>
                    <TextField fx:id="dniField" promptText="DNI" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Código:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <font><Font size="12.0"/></font>
                    </Label>
                    <TextField fx:id="codeField" promptText="Código numérico" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <font><Font size="12.0"/></font>
                    </Label>
                    <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                        <font><Font size="12.0"/></font>
                    </Label>
                    <TextField fx:id="phoneField" promptText="Teléfono" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                    
                    <!-- CheckBox Es Administrador -->
                    <CheckBox fx:id="isAdminCheckBox" text="Es Administrador" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                        <font><Font size="12.0"/></font>
                    </CheckBox>
                </GridPane>
                
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Button text="Agregar" onAction="#handleAddWorker" prefWidth="120.0"
                           style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;">
                        <font><Font size="12.0"/></font>
                    </Button>
                    <Button text="Actualizar" onAction="#handleUpdateWorker" prefWidth="120.0"
                           style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;">
                        <font><Font size="12.0"/></font>
                    </Button>
                    <Button text="Eliminar" onAction="#handleDeleteWorker" prefWidth="120.0"
                           style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;">
                        <font><Font size="12.0"/></font>
                    </Button>
                    <Button text="Limpiar" onAction="#handleClearForm" prefWidth="120.0"
                           style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;">
                        <font><Font size="12.0"/></font>
                    </Button>
                </HBox>
            </VBox>
            
            <!-- Tablas -->
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                    <Label text="Lista de Trabajadores" style="-fx-text-fill: #2c3e50;">
                        <font><Font name="System Bold" size="16.0"/></font>
                    </Label>
                    <TableView fx:id="workersTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="workerIdColumn" text="ID" prefWidth="40.0"/>
                            <TableColumn fx:id="workerNameColumn" text="Nombre" prefWidth="100.0"/>
                            <TableColumn fx:id="workerSurnameColumn" text="Apellido" prefWidth="100.0"/>
                            <TableColumn fx:id="workerDniColumn" text="DNI" prefWidth="90.0"/>
                            <TableColumn fx:id="workerCodeColumn" text="Código" prefWidth="70.0"/>
                            <TableColumn fx:id="workerEmailColumn" text="Email" prefWidth="150.0"/>
                            <TableColumn fx:id="workerPhoneColumn" text="Teléfono" prefWidth="100.0"/>
                        </columns>
                    </TableView>
                </VBox>
                
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                        <Label text="Fichajes Activos en Tiempo Real" style="-fx-text-fill: #2c3e50;">
                            <font><Font name="System Bold" size="16.0"/></font>
                        </Label>
                        <TableView fx:id="signingsTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="signingWorkerNameColumn" text="Trabajador" prefWidth="120.0"/>
                                <TableColumn fx:id="signingStatusColumn" text="Estado" prefWidth="100.0"/>
                                <TableColumn fx:id="signingSignInColumn" text="Entrada" prefWidth="80.0"/>
                                <TableColumn fx:id="signingWorkedTimeColumn" text="Trabajado" prefWidth="90.0"/>
                                <TableColumn fx:id="signingBreakTimeColumn" text="Descanso" prefWidth="90.0"/>
                                <TableColumn fx:id="signingRemainingTimeColumn" text="Restante" prefWidth="90.0"/>
                            </columns>
                        </TableView>
                    </VBox>
                    
                    <!-- Estadísticas -->
                    <HBox spacing="15.0" alignment="CENTER">
                        <VBox spacing="5.0" alignment="CENTER" style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 150;" HBox.hgrow="ALWAYS">
                            <Label text="Total Trabajadores" style="-fx-text-fill: white;" wrapText="true" alignment="CENTER">
                                <font><Font size="11.0"/></font>
                            </Label>
                            <Label fx:id="totalWorkersLabel" text="0" style="-fx-text-fill: white;">
                                <font><Font name="System Bold" size="28.0"/></font>
                            </Label>
                        </VBox>
                        
                        <VBox spacing="5.0" alignment="CENTER" style="-fx-background-color: #27ae60; -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 150;" HBox.hgrow="ALWAYS">
                            <Label text="Activos" style="-fx-text-fill: white;">
                                <font><Font size="11.0"/></font>
                            </Label>
                            <Label fx:id="activeWorkersLabel" text="0" style="-fx-text-fill: white;">
                                <font><Font name="System Bold" size="28.0"/></font>
                            </Label>
                        </VBox>
                        
                        <VBox spacing="5.0" alignment="CENTER" style="-fx-background-color: #e67e22; -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 150;" HBox.hgrow="ALWAYS">
                            <Label text="Administradores" style="-fx-text-fill: white;" wrapText="true" alignment="CENTER">
                                <font><Font size="11.0"/></font>
                            </Label>
                            <Label fx:id="adminCountLabel" text="0" style="-fx-text-fill: white;">
                                <font><Font name="System Bold" size="28.0"/></font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
